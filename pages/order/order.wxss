/* pages/order/order.wxss */
.order-page{
  background: #f5f5f5;
  height: 100vh;
  overflow-y: auto;
}

.order-list{
  background: #fff;
  padding: 10px;
  font-size: 26rpx;
  margin:10px 5px;
  border-radius: 5px;
}
/* top */
.order-list-top{
  display: flex;
  justify-content: space-between;
}
.order-list-top text:nth-child(2){
  color: #ff9900;
}

/* center */
.order-list-center{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  margin: 8px 0;
  padding: 8px 0;
  border-top: 1px solid #e9eaec;
  border-bottom:1px solid #e9eaec;
}
.order-list-center>view:nth-child(1) image{
  width: 130rpx;
  height:130rpx;
  border-radius: 5px;
}
.order-list-center>view:nth-child(2){
  width: 74%;
   display: flex;
   flex-direction: column;
   padding: 0 10px;
   justify-content: space-around;
   align-items: flex-start;
}
/* bototm */
.order-list-bottom>text:nth-child(1){
  margin-right: 10px;
}

.title-color999{
  color: #999;
}

/* pages/mall/mall.wxss */

.mall-page {
  height: 100vh;
}

.mall-page .integral-nav {
  background: #4E84E6;
  text-align: center;
  color: #fff;
  padding: 12px 0;
  font-size: 30rpx;
}

.mall-page .integral-nav view:nth-child(2) {
  margin: 8px 0;
}

.mall-page .integral-nav view:nth-child(3) {
  width: 260rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 50rpx;
  border: 1px solid #fff;
  margin: 0 auto;
}

/* 商品列表 */

.mall-goods {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 8px;
}

.mall-goods .goods-out {
  background: #fff;
  margin-bottom: 10px;
  width: 48%;
  /* border: 1px solid rgb(245, 245, 245); */
  box-shadow: 0px 0px 3px rgba(0, 0, 0, 0.1);
  padding-bottom: 8px;
  border-radius: 5px;
  overflow: hidden;
}

.mall-goods .goods-out .goods-image {
  width: 100%;
  height: 320rpx;
}

.mall-goods .goods-out .goods-image image {
  width: 100%;
  height: 100%;
}

.mall-goods .goods-out .goods-intro {
  font-size: 26rpx;
  padding: 0 5px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}

.mall-goods .goods-out .goods-integral {
  text-align: center;
  color: #f90;
  font-size: 26rpx;
  padding: 5px 0;
  line-height: 26rpx;
  vertical-align: text-top;
}

.mall-goods .goods-out .goods-btn {
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 30rpx;
  border: 1px solid #4E84E6;
  margin: 0 auto;
  text-align: center;
  color: #4E84E6;
  font-size: 26rpx;
}

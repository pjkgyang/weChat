/* pages/columnDetail/columndetail.wxss */
.columnDettail-page{
  height: calc(100vh - 40px);
  overflow-y: auto;
  background: #f5f5f5;
}
.columnDettail-detail{
  background: #fff;
  padding: 10px;
}
.columnDettail-detail .columnDettail-title{
  font-weight: 700;
}
.columnDettail-detail .columnDettail-abbr{
  font-size: 24rpx;
  margin: 10px 0;
  color: #999;
  display:flex;
  justify-content: space-between;
  
}
.columnDettail-detail .columnDettail-content image{
  width: 100%;
}

/* 评论 */
.columnDettail-comment{
  background: #fff;
  padding: 10px;
  margin: 10px 0;
}
.columnDettail-comment .comment-title{
  font-size: 28rpx;
  font-weight: 700;
  border-bottom: 1px solid #e9eaec;
  padding-bottom: 5px;
}
.columnDettail-comment .comment-list{
  font-size: 28rpx;
  padding: 8px 0 4px 0;
  border-bottom: 1px solid #e9eaec;
}
.columnDettail-comment .comment-list .comment-info{
  padding: 5px 20px;
}
.columnDettail-comment .comment-list .comment-content{
  padding: 5px 0;
  font-size:26rpx;
}
.columnDettail-comment .comment-content .comment-content_original{
  background: #f8f8f9;
  padding: 8px;
  margin:10px 0;
  border-radius: 3px;
}
.columnDettail-comment .comment-content .comment-content_original text{
  font-weight: 700;
  font-size: 24rpx;
}
.columnDettail-comment .comment-list .comment-date{
  color: #999;
  font-size: 25rpx;
  display: flex;
  align-items: center;
}
.columnDettail-comment .comment-list .comment-date view{
 width:80rpx;
 height: 30rpx;
 line-height: 30rpx;
 text-align: center;
 border-radius: 5px;
 /* margin-left: 15px; */
}

/* 用户姓名 */
.columnDettail-comment .comment-list .comment-username{
  /* margin-left: 10px; */
  font-size: 24rpx;
}
.font700{
  font-weight: 700;
  margin: 0 5px;
}

/* textarea */
.comment-textarea{
  position: fixed;
  bottom: 0;
  width:100%;
  background: #fff;
  box-shadow: 0 -1px 2px rgba(0, 0, 0, 0.1);
  height: 40px;
  line-height: 40px;
  padding: 0 15px;
}
.comment-textarea .comment-tag{
  font-size: 25rpx;
  width: 40%;
}
.textarea{
  padding: 10px;
  margin-bottom: 150px;
}
.textarea input{
  background: #e9eaec;
  padding: 5px 10px;
  
}
.textarea input,.place-holder{
  font-size:26rpx;
}
.textarea .commit-btn{
  width: 50px;
  height: 20px;
  line-height: 20px;
  border-radius: 10px;
  background: #2d8cf0;
  color: #fff;
  float: right;
  font-size: 22rpx;
  text-align: center;
  margin: 10px 0;
}

/* 音频滚动条 */
.audio-slider{
  display: flex;
  color: #999;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
} 
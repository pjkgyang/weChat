/* template/template.wxss */

.template-imagetext {
  border: 1px solid #000;
}

.template-imagetext {
  padding: 10rpx 0;
}

.template-imagetext  .imagetext-abstract {
  width: 100%;
  display: inline-block;
  margin: 10rpx 0;
}

.template-imagetext  .imagetext_info {
  margin: 0 5rpx;
}

.template-imagetext  .imagetext-img {
  width: 30%;
  height: 200rpx;
}


/* topBar */
.topBar{
  width: 100%;
  height: 300rpx;
  background: #4E84E6;
  border-bottom-left-radius: 30%;
  border-bottom-right-radius: 30%;
}